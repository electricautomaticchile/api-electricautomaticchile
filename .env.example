# ============================================
# Backend API - Electric Automatic Chile
# Variables de Entorno
# ============================================

# Entorno
NODE_ENV=development
PORT=4000

# Base de Datos MongoDB
MONGODB_URI=mongodb+srv://usuario:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# JWT Secrets (IMPORTANTE: Debe ser el mismo en WebSocket API)
JWT_SECRET=tu_jwt_secret_super_seguro_aqui_minimo_32_caracteres
JWT_REFRESH_SECRET=tu_refresh_secret_super_seguro_aqui
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# URLs de Servicios
FRONTEND_URL=http://localhost:3000
WS_API_URL=http://localhost:5000

# Redis (opcional)
REDIS_URL=redis://localhost:6379

# Email Service (Resend)
RESEND_API_KEY=re_tu_api_key_de_resend_aqui
EMAIL_FROM=noreply@tudominio.com
EMAIL_TO=contacto@tudominio.com

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=tu_aws_access_key_id_aqui
AWS_SECRET_ACCESS_KEY=tu_aws_secret_access_key_aqui
AWS_REGION=us-east-1
AWS_S3_BUCKET_NAME=tu-bucket-documentos
AWS_S3_IMAGES_BUCKET_NAME=tu-bucket-imagenes
AWS_S3_PDF_KEY=ejemplo.pdf

# Security & Rate Limiting
BCRYPT_ROUNDS=12
AUTH_RATE_LIMIT_MAX=5
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000
SESSION_TIMEOUT=86400000

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# WebSocket CORS
WEBSOCKET_CORS_ORIGINS=localhost:3000

